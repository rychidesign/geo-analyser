{
  "appId": "com.geoanalyser.app",
  "productName": "GEO-Analyser",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron",
    "public",
    "!dist-electron/preload.cjs"
  ],
  "extraResources": [
    {
      "from": "dist-electron/preload.cjs",
      "to": "preload.cjs"
    },
    {
      "from": "dist-electron/sql-wasm.wasm",
      "to": "sql-wasm.wasm"
    }
  ],
  "asarUnpack": [
    "**/*.wasm"
  ],
  "icon": "build/icon.png",
  "win": {
    "icon": "build/icon.png",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publish": {
      "provider": "github",
      "owner": "rychidesign",
      "repo": "geo-analyser"
    }
  },
  "mac": {
    "icon": "build/icon.png",
    "category": "public.app-category.developer-tools"
  },
  "linux": {
    "icon": "build/icon.png",
    "category": "Development"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "GEO Analyser"
  },
  "publish": {
    "provider": "github",
    "owner": "rychidesign",
    "repo": "geo-analyser"
  }
}
