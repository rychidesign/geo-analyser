{
  "name": "geo-analyser",
  "version": "1.0.0",
  "description": "Generative Engine Optimization Desktop App",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "npm run copy-sqljs-wasm && npm run copy-preload && tsc && vite build && electron-builder",
    "build:win": "npm run copy-sqljs-wasm && npm run copy-preload && tsc && vite build && electron-builder --win",
    "build:mac": "npm run copy-sqljs-wasm && npm run copy-preload && tsc && vite build && electron-builder --mac",
    "build:linux": "npm run copy-sqljs-wasm && npm run copy-preload && tsc && vite build && electron-builder --linux",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps",
    "copy-sqljs-wasm": "node copy-sqljs-wasm.js",
    "copy-preload": "node -e \"const fs=require('fs'); fs.mkdirSync('dist-electron',{recursive:true}); fs.copyFileSync('src/main/preload.cjs','dist-electron/preload.cjs');\"",
    "electron:dev": "npm run dev:setup && concurrently -k \"vite\" \"npm run dev:electron\"",
    "dev:setup": "node -e \"const fs=require('fs'); fs.mkdirSync('dist-electron',{recursive:true}); fs.copyFileSync('src/main/preload.cjs','dist-electron/preload.cjs');\"",
    "dev:electron": "wait-on http://localhost:5173 && tsc -p tsconfig.node.json && electron .",
    "electron:build": "tsc && vite build"
  },
  "keywords": [
    "electron",
    "vite",
    "react",
    "geo",
    "seo"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.17.19",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.29.3",
    "electron-updater": "^6.7.3",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.309.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "recharts": "^2.10.3",
    "remark-gfm": "^4.0.1",
    "sql.js": "^1.10.3",
    "tailwind-merge": "^2.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.7",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/sql.js": "^1.4.9",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.10",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.geo.analyser",
    "productName": "GEO Analyser",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "public/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
}
